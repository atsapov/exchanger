%h1 Sign up

= form_for(@user) do |f|
  = render 'shared/error_messages', :object => f.object
  .field
    = f.label :login
    %br
    = f.text_field :login
  .field
    = f.label :password
    %br
    = f.password_field :password
  .field
    = f.label :password_confirmation, "Confirmation"
    %br
    = f.password_field :password_confirmation
  .actions
    = f.submit "Sign up"

